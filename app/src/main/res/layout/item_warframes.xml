<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_warframes"
    style="@style/AppTheme.Card.Margins"
    android:layout_width="match_parent"
    android:layout_height="300px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_background"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start" />

        <LinearLayout
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewName"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="Name:" />

            <TextView
                android:id="@+id/textViewHealth"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="Health:" />

            <TextView
                android:id="@+id/textViewEnergy"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:text="Energy:" />

            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:text="Info:" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_partner"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_normal">

            <TextView
                android:id="@+id/text_warframes_name"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="@dimen/margin_small"
                android:paddingLeft="@dimen/margin_large"
                android:paddingRight="@dimen/margin_large"
                android:textColor="#555555"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_warframes_health"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:paddingLeft="@dimen/margin_large"
                android:paddingRight="@dimen/margin_large"
                android:textColor="#e50000"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/text_warframes_energy"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:paddingLeft="@dimen/margin_large"
                android:paddingRight="@dimen/margin_large"
                android:textColor="#00bbca"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/text_warframes_description"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:maxLines="2"
                android:textSize="11sp" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

